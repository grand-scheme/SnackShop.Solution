@{
  Layout = "_Layout";
}
@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
  @User.Identity.Name

  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" value="log out" class="btn" />
  }
}
else
{
  @Html.ActionLink("Register", "Register")
  @Html.ActionLink("Log in", "Login")
}