@{
  Layout = "_Layout";
}

@using SnackShop.Models;
@model List<SnackShop.Models.Flavor>

@if (@Model.Count == 0)
{
  <p>nothing</p>
}
else
{
  @foreach (Flavor flavor in Model)
  {
    <p>
      @Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId} )
    </p>
    <p>
      @Html.ActionLink("Edit", "Edit", new { id = flavor.FlavorId} )
    </p>
    <p>
      @Html.ActionLink("Delete", "Delete", new { id = flavor.FlavorId} )
    </p>
  }
}
<p>
@Html.ActionLink("Create New Flavor Profile", "Create")
</p>