@{
  Layout = "_Layout";
}

@using SnackShop.Models;
@model List<SnackShop.Models.Flavor>

@if (@Model.Count == 0)
{
  <p>nothing</p>
}
else
{
  @foreach (Flavor flavor in Model)
  {
    @Html.ActionLink($"{flavor.FlavorName}", "", new { id = flavor.FlavorId} )
    @Html.ActionLink("Edit", "Edit", new { id = flavor.FlavorId} )
    @Html.ActionLink("Delete", "Delete", new { id = flavor.FlavorId} )
  }
}

@Html.ActionLink("Add", "Create")