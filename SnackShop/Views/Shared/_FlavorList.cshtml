@using SnackShop.Models;
@model List<SnackShop.Models.Flavor>;

@if (
  @ViewBag.Flavors.Count == 0
  )
{
  @Html.ActionLink(
    "Create new Flavor Profile", "Create", "Flavors"
    )
}
else
{
  @foreach (
    Flavor flavor in ViewBag.Flavors
    )
  {
    <p>
      @Html.ActionLink(
        $"{flavor.FlavorName}",
        "Details",
        "Flavors",
        new { id = flavor.FlavorId}
      )
    </p>
  }
  <p>
    @Html.ActionLink(
      "Flavor Profile Index",
      "Index",
      "Flavors"
    )
  </p>
}