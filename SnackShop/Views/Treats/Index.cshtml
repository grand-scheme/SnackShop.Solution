@{
  Layout = "_Layout";
}

@using SnackShop.Models;
@model List<SnackShop.Models.Treat>;
  @if (@Model.Count == 0)
  {
    <p>
      NOTHING
    </p>
  }
  else
  {
    @foreach (Treat treat in Model) 
    {
      <p>
      @Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId});
      </p>
      <p>
      @Html.ActionLink($"Edit", "Edit", new { id = treat.TreatId} )
      </p>
      <p>
      @Html.ActionLink($"Delete", "Delete", new { id = treat.TreatId} )
      </p>
    }
  }
<p>
  @Html.ActionLink("Add", "Create")
  </p>